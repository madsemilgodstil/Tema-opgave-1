---
import MainLayout from "../layouts/MainLayout.astro";
import AndenSection from "../components/AndenSection.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import ScrollingContainer from "../components/ScrollingContainer.astro";
import { cardContent } from "../data/card-content.js";
import Tag from "../components/Tag.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import sarah from "../assets/images/sarah.jpg";
import home1 from "../assets/home1.jpg";
import home2 from "../assets/home2.jpg";
import home3 from "../assets/home3.jpg";
import home4 from "../assets/home4.jpg";
import Overskrift from "../components/Overskrift.astro";
import ContactInfo from "../components/ContactInfo.astro";

import Animation from "../components/Animation.astro";

import CorevaluesSection from "../components/CorevaluesSection.astro";

const corevalueData = await fetch("https://raw.githubusercontent.com/espi0001/frontend-design/main/resources/json/corevalues.json").then((res) => res.json());
---

<MainLayout title="Home">
  <section class="hero">
    <article class="tekst-knap">
      <h1>Adam Buschemia Business Consultant</h1>
      <p>Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.</p>
      <Button style="secondary" linket="#">Book a meeting</Button>
    </article>
    <Image alt="" src={sarah} />
  </section>

  <section class="who-we-are">
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Finance & Restructuring" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">Our Services</Card>
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Our Approach" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">More About</Card>
    <Card style="primary" buttonProps={{ style: "primary" }} h6="Our Approach" tekst="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.">Explore Our Solution</Card>
  </section>
  <AndenSection imageProps={{ imageProps: "case2" }} tagProps={{ style: "secondary" }} h2="What To Expect" tekst="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat." li1="Bring to the table win-win survival strategies to ensure proactive domination. At the end of the day." li2="Capitalize on low hanging fruit to identify a ballpark value added activity to beta test override the digital.">WE'LL WORK WITH YOU</AndenSection>

  <section class="services">
    <!-- <div class="teksten">
      <h2>Financial Projections</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
    </div> -->
    <ScrollingContainer cardContent={cardContent} />
  </section>
  <section class="experience">
    <div class="teksten">
      <Tag style="tertiary">Experience</Tag>
      <h2>More than 25 years of experience</h2>
      <p>3000+ our clients are insured around the World</p>
    </div>
    <div class="animationen">
      <Animation />
    </div>
  </section>

  <section class="core">
    <Tag style="secondary">Growing with our Clients</Tag>
    <!-- 
    <Overskrift farve="secondary" linket="#" buttonProps={{ style: "secondary" }} h2="Our core values & principles" tekst="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps.">Get in touch</Overskrift> -->
    <CorevaluesSection data={corevalueData} buttonProps1={{ style: "secondary" }} buttonProps2={{ style: "primary" }} />
  </section>

  <section class="sidste">
    <article class="del1">
      <Tag style="secondary">Proccess</Tag>
      <h2>Contact Us. Itâ€™s Easy.</h2>
      <p>Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>

      <ContactInfo iconname="call-today" tekst="Call Today" h6="+1 800 100 900" />
      <ContactInfo iconname="monday-friday" tekst="Monday To Friday" h6="9AM - 5PM" />
      <ContactInfo iconname="adress-grey" tekst="USA Office" h6="195 Devonshire St Boston, MA 02110" />
    </article>
    <figure>
      <div class="billede-grid">
        <Image alt="" src={home2} />
        <div>
          <Image alt="" src={home3} />
          <Image alt="" src={home4} />
        </div>
      </div>
    </figure>
  </section>
</MainLayout>
<style>
  .hero {
    background-color: var(--color-primary3);
    color: var(--color-secondary2);
    display: flex;

    align-items: center;
    justify-content: center;
    gap: 32px;

    img {
      width: 100%;
      max-width: 600px;
    }
  }

  .tekst-knap {
    display: inline-flex;
    flex-direction: column;
  }

  h1 {
    font-weight: var(--font-weight-700);
    margin-bottom: 32px;
  }

  .who-we-are {
    display: flex;
    justify-content: center;
    gap: 20px;
  }

  .title {
    padding-left: 12px;
    padding-right: 12px;
    background: var(--color-primary1);
    border-radius: 20px;
    justify-content: flex-start;
    align-items: flex-start;
    gap: 10px;
    display: inline-flex;
  }

  .services {
    margin: 0;
    /* scroll-snap-align: center; */
    scroll-snap-stop: always;
    display: flex;
    flex-direction: column;
    place-content: center;
    align-items: center;
    gap: var(--content-gap);
    color: var(--color-primary3);
    background: var(--color-secondary1);

    > * {
      /* max-width: var(--content-width); */
    }
    h2 {
      font-weight: var(--font-weight-700);
    }
  }
  .core {
    background: var(--color-primary3);
    display: flex;
    flex-direction: column;
  }
  .teksten {
    max-width: 50rem;
    display: flex;
    flex-direction: column;
  }

  .experience {
    background: var(--color-primary1);
    color: var(--color-primary3);
    display: flex;
  }

  .animationen {
    display: flex;
    gap: 20px;
    align-items: center;
  }

  .teksten2 {
    display: flex;
  }
  .sidste {
    display: grid;
    grid-template-columns: 1fr 1fr;
    color: var(--color-primary3);
    gap: 69px;
    .del1 {
      display: flex;
      flex-direction: column;
    }
  }

  .icons {
    display: flex;
    align-items: center;
    gap: 1rem;

    svg {
      width: 52px;
    }
  }

  .billede-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;

    :last-child {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
  }
</style>
